<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="co.touchlab.touchkit.rk">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
      android:name=".TouchKitApplication"
      android:allowBackup="true"
      android:label="@string/app_name"
      android:icon="@mipmap/ic_launcher"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">

      <activity
          android:name=".ui.SplashActivity"
          android:theme="@style/AppTheme.NoActionBar"
          android:label="@string/app_name">
          <intent-filter>
              <action android:name="android.intent.action.MAIN" />
              <category android:name="android.intent.category.LAUNCHER" />
          </intent-filter>
      </activity>

      <activity
          android:name=".ui.MainActivity"
          android:theme="@style/AppTheme.NoActionBar"
          android:label="@string/activities">
      </activity>

      <activity
          android:name=".ui.ViewTaskActivity"
          android:label="@string/app_name"
          />

      <activity
          android:name=".ui.UserPinActivity"
          android:label="@string/app_name"
          />

      <activity
          android:name=".ui.EmailVerificationActivity"
          android:label="@string/app_name"
          />

      <activity
          android:name=".ui.OnboardingActivity"
          android:label="@string/app_name"
          />

        <activity
          android:name=".ui.ConsentActivity"
          android:label="@string/signature_page_title"
          />

      <activity
          android:name=".ui.ViewVideoActivity"
          android:label="@string/app_name"
          />

    <activity
        android:name=".ui.ViewWebDocumentActivity"
        android:label="@string/app_name"
        />

  </application>

</manifest>
