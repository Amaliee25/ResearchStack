<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
    >

        <TextView
            android:id="@+id/layout_studyoverview_video_title"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            tools:text="@string/lorem_name"
        />

        <TextView
            android:id="@+id/layout_studyoverview_video_subtitle"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            tools:text="@string/lorem_name"
        />

        <ImageButton
            android:id="@+id/layout_studyoverview_video_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="?android:attr/selectableItemBackground"
            android:minHeight="118dp"
            android:minWidth="118dp"
            android:scaleType="center"
            tools:src="@mipmap/ic_launcher"
        />

    </LinearLayout>

</ScrollView>