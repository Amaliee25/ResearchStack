<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="co.touchlab.researchstack.skin.ui.OnboardingActivity"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        />

    <!--<co.touchlab.researchstack.skin.ui.views.PageIndicator-->
        <!--android:id="@+id/pager_indicator"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:animateLayoutChanges="true"-->
        <!--/>-->

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/intro_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="36dp"
        android:paddingRight="36dp"
        android:textColor="@android:color/white"
        android:onClick="onSignUpClicked"
        android:text="@string/join_study"
        />

    <TextView
        android:id="@+id/intro_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginBottom="4dp"
        android:clickable="true"
        android:onClick="onSignInClicked"
        android:text="@string/already_participating"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        />

</LinearLayout>