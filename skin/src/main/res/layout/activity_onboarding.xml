<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="co.touchlab.researchstack.skin.ui.OnboardingActivity"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        />

    <!--<co.touchlab.researchstack.skin.ui.views.PageIndicator-->
        <!--android:id="@+id/pager_indicator"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:animateLayoutChanges="true"-->
        <!--/>-->

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <Space android:layout_width="16dp" android:layout_height="match_parent"/>

        <!-- TODO these buttons don't match the designs exactly and might look bad on low dpi -->

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/intro_skip"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:onClick="onSkipClicked"
            android:text="@string/skip_signup"
            />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/intro_sign_up"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:onClick="onSignUpClicked"
            android:text="@string/join_study"
            />
        <Space android:layout_width="16dp" android:layout_height="match_parent"/>

    </LinearLayout>

    <TextView
        android:id="@+id/intro_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:onClick="onSignInClicked"
        android:text="@string/already_participating"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        />

</LinearLayout>