<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/rsc_padding_medium"
        >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/summary"
        android:layout_marginTop="@dimen/rsc_padding_medium"
        >

        <TableRow
            android:gravity="center_vertical"
            android:minHeight="@dimen/rsc_item_size_default"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/rsc_padding_medium"
                android:gravity="right"
                android:text="@string/rsc_username"
                android:textColor="@color/black"
                />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint="@string/rsc_username"
                android:inputType="textEmailAddress"
                />
        </TableRow>

        <TableRow
            android:gravity="center_vertical"
            android:minHeight="@dimen/rsc_item_size_default"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/rsc_padding_medium"
                android:gravity="right"
                android:text="@string/password"
                android:textColor="@color/black"
                />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint="@string/study_registration_password_hint"
                android:inputType="textVisiblePassword"
                />
        </TableRow>


        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/rsc_padding_medium"
            android:gravity="center"
            android:text="@string/forgot_password"
            />


    </TableLayout>

    <TextView
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/rsc_next"
        android:textAllCaps="true"
        android:minHeight="48dp"
        android:minWidth="96dp"
        android:gravity="center"
        android:background="?attr/selectableItemBackgroundBorderless"
        />

    <include
        android:id="@+id/progress"
        android:visibility="gone"
        tools:visibility="gone"
        layout="@layout/progress"
        />

</RelativeLayout>