<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

    <TextView
        style="@style/Core.Survey.Title"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Credentials"
        />

    <TableLayout
        android:id="@+id/credentials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="@dimen/rsc_padding_wedge"
        android:layout_marginLeft="@dimen/rsc_margin_left"
        android:layout_marginRight="@dimen/rsc_margin_right"
        android:stretchColumns="1"
        >

        <TableRow
            android:gravity="center_vertical"
            android:minHeight="@dimen/rsc_item_size_default"
            >

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/rsc_padding_small"
                android:gravity="right"
                android:fontFamily="sans-serif-medium"
                android:text="@string/rsc_username"
                />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint="@string/study_registration_username_hint"
                android:textSize="14sp"
                android:inputType="textEmailAddress"
                />

        </TableRow>

        <TableRow
            android:gravity="center_vertical"
            android:minHeight="@dimen/rsc_item_size_default"
            >

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/rsc_padding_small"
                android:gravity="right"
                android:fontFamily="sans-serif-medium"
                android:text="@string/password"
                android:layout_column="0"
                />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:hint="@string/study_registration_password_hint"
                android:inputType="textVisiblePassword"
                android:layout_column="1"
                />

        </TableRow>

    </TableLayout>

    <co.touchlab.researchstack.core.ui.views.SubmitBar
        android:id="@+id/submit_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:positiveActionTitle="@string/rsc_submit"
        app:negativeActionTitle="@string/rsc_exit"
        />

    <android.support.v7.widget.AppCompatTextView
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/submit_bar_negative"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/submit_bar"
        android:text="@string/forgot_password"
        />

    <include
        android:id="@+id/progress"
        layout="@layout/progress"
        android:visibility="gone"
        tools:visibility="gone"
        />

</RelativeLayout>