<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="ResourceName">

    <declare-styleable name="Backbone">
        <attr name="passcodeTheme" format="reference"/>
        <attr name="toolbarTheme" format="reference"/>
        <attr name="submitbarStyle" format="reference"/>
        <attr name="icontablayoutStyle" format="reference"/>
        <attr name="emptyviewStyle" format="reference"/>
        <attr name="signatureviewStyle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="IconTabLayout">
        <attr name="android:background"/>
        <attr name="android:minHeight"/>
        <attr name="tabIconColor" format="color"/>
        <attr name="tabIconIndicatorColor" format="color"/>
        <attr name="tabTextColor"/>
    </declare-styleable>

    <declare-styleable name="EmptyView">
        <attr name="android:background"/>
        <attr name="emptyIcon" format="reference"/>
        <attr name="emptyIconTint" format="color"/>
        <attr name="emptyText" format="string"/>
        <attr name="emptyTextAppearance" format="reference"/>
    </declare-styleable>

    <declare-styleable name="SubmitBar">
        <attr name="android:background"/>
        <attr name="positiveActionTitle"
              format="string"/>
        <attr name="negativeActionTitle"
              format="string"/>
        <attr name="positiveActionColor"
              format="color"/>
        <attr name="negativeActionColor"
              format="color"/>
    </declare-styleable>

    <declare-styleable name="SignatureView">
        <attr name="signatureColor"
              format="color"/>
        <attr name="signaturePrintColor"
              format="color"/>
        <attr name="signatureStrokeSize"
              format="dimension"/>
        <attr name="hintText"
              format="string"/>
        <attr name="hintTextColor"
              format="color"/>
        <attr name="hintTextSize"
              format="dimension"/>
        <attr name="guidelineColor"
              format="color"/>
        <attr name="guidelineMargin"
              format="dimension"/>
        <attr name="guidelineHeight"
              format="dimension"/>
    </declare-styleable>

</resources>