<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools"
    >

    <TextView
        android:id="@+id/title"
        style="@style/Backbone.Survey.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rsc_pincode_enter_title"
        />

    <TextView
        android:id="@+id/text"
        style="@style/Backbone.Survey.Summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:paddingTop="@dimen/rsc_padding_small"
        android:text="@string/rsc_pincode_enter_summary"
        android:textColorLink="?attr/colorAccent"
        android:minHeight="52dp"
        />

    <co.touchlab.researchstack.backbone.ui.views.PassCodeView
        android:id="@+id/pincode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rsc_item_size_default"
        android:singleLine="true"
        android:layout_below="@+id/text"
        android:inputType="number"
        android:textSize="20sp"
        android:background="@null"
        android:letterSpacing=".25"
        android:gravity="center"/>

    <include
        android:id="@+id/progress"
        android:visibility="gone"
        tools:visibility="gone"
        layout="@layout/progress"
        />

</RelativeLayout>