<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Backbone">
        <!-- Text Color for ActionBar and Text -->
        <item name="alertDialogTheme">@style/AppTheme.Dialog</item>
        <item name="android:alertDialogTheme">@style/AppTheme.Dialog</item>
        <!-- Text Color for Toolbar and Text -->
        <item name="android:textColor">@color/warm_gray</item>
        <item name="android:textColorPrimary">@color/warm_gray</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- TODO colorControlNormal is used to color Back arrow in toolbar. Find better approach as this my affect other widgets. -->
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.ColorActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="background">?attr/colorPrimary</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorControlNormal">#FF0000</item>
        <item name="titleTextAppearance">@style/TextAppearance.Toolbar.Title</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="TextAppearance.Toolbar.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ActionButton.Overflow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="AppTheme.Dialog"
           parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/warm_grey</item>
        <!-- Used for the background -->
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- TODO figure out which of these is actually needed -->
        <item name="android:actionBarStyle">@style/AppTheme.ColorActionBarStyle</item>
        <item name="actionBarStyle">@style/AppTheme.ColorActionBarStyle</item>
        <item name="toolbarStyle">@style/AppTheme.ColorActionBarStyle</item>
        <item name="android:toolbarStyle">@style/AppTheme.ColorActionBarStyle</item>
    </style>

    <style name ="AppTheme.Splash" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="colorPrimaryDark">@color/warm_grey</item>
    </style>

    <style name="AppTheme.Onboarding" parent="@style/AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/gray</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/dark_gray</item>
    </style>

    <style name="AppTheme.Onboarding.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
