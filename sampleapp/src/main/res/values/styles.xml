<resources>

    <!-- Base application theme. -->
    <style name="SampleTheme" parent="Backbone">
        <!-- Text Color for ActionBar and Text -->
        <item name="alertDialogTheme">@style/SampleTheme.Dialog</item>
        <item name="android:alertDialogTheme">@style/SampleTheme.Dialog</item>
        <!-- Text Color for Toolbar and Text -->
        <item name="android:textColor">@color/rsc_warm_gray</item>

        <!-- Change this to white. Make sure all views have a color set instead of pointing to
        textColorPrimary attribute-->
        <item name="android:textColorPrimary">@color/rsc_warm_gray</item>
        <item name="android:textColorSecondary">@color/rsc_warm_gray</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="colorPrimary">@color/rsc_colorPrimary</item>
        <item name="colorPrimaryDark">@color/rsc_colorPrimaryDark</item>
        <item name="colorAccent">@color/rsc_colorAccent</item>
    </style>

    <style name="SampleTheme.ColorActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="background">?attr/colorPrimary</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="titleTextAppearance">@style/TextAppearance.Toolbar.Title</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="TextAppearance.Toolbar.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ActionButton.Overflow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="SampleTheme.Dialog"
           parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/rsc_colorAccent</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/warm_grey</item>
        <!-- Used for the background -->
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="SampleTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- TODO figure out which of these is actually needed -->
        <item name="toolbarStyle">@style/SampleTheme.ColorActionBarStyle</item>
    </style>

    <style name="SampleTheme.Settings" parent="@style/SampleTheme.NoActionBar">
        <item name="android:textColor">@color/text_color_settings_title</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@color/text_color_settings_summary</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="preferenceTheme">@style/SampleTheme.Settings.Preference</item>
    </style>

    <style name="SampleTheme.Settings.Preference" parent="@style/PreferenceThemeOverlay.v14.Material"/>

    <style name ="SampleTheme.Splash" parent="SampleTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="colorPrimaryDark">@color/warm_grey</item>
    </style>

    <style name="SampleTheme.Onboarding" parent="@style/SampleTheme.NoActionBar">
        <item name="android:windowBackground">@color/gray</item>
        <item name="colorButtonNormal">@color/rsc_colorAccent</item>
        <item name="colorPrimaryDark">@color/dark_gray</item>
    </style>

    <style name="SampleTheme.Onboarding.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/rsc_colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name ="SampleTheme.Video" parent="SampleTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>

</resources>
