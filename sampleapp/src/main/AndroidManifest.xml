<manifest package="co.touchlab.researchstack.sampleapp"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".SampleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/SampleTheme">

        <activity
            android:name="co.touchlab.researchstack.skin.ui.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SampleTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="co.touchlab.researchstack.skin.ui.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/SampleTheme.NoActionBar">
        </activity>

        <activity
            android:name="co.touchlab.researchstack.backbone.ui.ViewTaskActivity"
            android:label="@string/app_name"
            />

        <activity
            android:name="co.touchlab.researchstack.skin.ui.SignUpTaskActivity"
            android:label="@string/app_name"
            />

        <activity
            android:name="co.touchlab.researchstack.skin.ui.EmailVerificationActivity"
            android:label="@string/app_name"
            />

        <activity
            android:name="co.touchlab.researchstack.skin.ui.OnboardingActivity"
            android:label="@string/app_name"
            android:theme="@style/SampleTheme.Onboarding"
            />

        <activity
            android:name="co.touchlab.researchstack.skin.ui.ViewVideoActivity"
            android:theme="@style/SampleTheme.Video"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize|screenLayout|uiMode"
            android:label="@string/app_name"
            />

        <activity
            android:name=".SampleSettingsActivity"
            android:label="@string/settings"
            android:theme="@style/SampleTheme.Settings"/>

        <activity
            android:name="co.touchlab.researchstack.skin.ui.LearnActivity"
            android:label="@string/learn"
            android:theme="@style/SampleTheme.NoActionBar"/>

        <activity
            android:name="co.touchlab.researchstack.backbone.ui.ViewWebDocumentActivity"
            android:label="@string/app_name"
            />

        <activity android:name="co.touchlab.researchstack.skin.ui.ViewFragmentActivity"
                  android:theme="@style/SampleTheme.NoActionBar"/>

        <activity
            android:name="co.touchlab.researchstack.skin.ui.SoftwareNoticesActivity"
            android:theme="@style/SampleTheme.NoActionBar"
            android:label="@string/software_notice"
            />

    </application>

</manifest>
