<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/abc_primary_text_material_light</item>
        <!-- Used for the background -->
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ConsentReviewSignatureView">
        <item name="signatureColor">?android:attr/textColorPrimary</item>
        <item name="signatureStrokeSize">1dp</item>
        <item name="hintText">@string/consent_signature_placeholder</item>
        <item name="hintTextColor">#ccc</item>
        <item name="hintTextSize">16sp</item>
        <item name="guidelineColor">#ccc</item>
        <item name="guidelineMargin">12dp</item>
        <item name="guidelineHeight">1dp</item>
    </style>

    <!-- Settings -->

    <style name="Divider">
        <item name="android:background">@color/divider_settings</item>
    </style>

    <style name="Settings.Divider.Horizontal" parent="Divider">
        <item name="android:layout_marginLeft">56dp</item>
    </style>

    <style name="Settings.Divider.Vertical" parent="Divider">
        <item name="android:layout_marginTop">56dp</item>
    </style>

    <style name="Settings">
        <item name="android:paddingLeft">56dp</item>
    </style>

    <style name="Settings.Header">
        <item name="android:paddingTop">@dimen/padding_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorTertiary</item>
    </style>

    <style name="Settings.Item">
        <item name="android:minHeight">@dimen/item_size_default</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Settings.Footer">
        <item name="android:minHeight">56dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">?android:attr/textColorTertiary</item>
    </style>

</resources>
